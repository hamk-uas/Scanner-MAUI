<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Functions="clr-namespace:Scanner_MAUI.Functions"
             xmlns:local="clr-namespace:Scanner_MAUI.Styles"
             x:Class="Scanner_MAUI.Pages.RealTimeData"
             Title=""
             >
    <ContentPage.Resources>
        <Functions:GraphicsDrawable x:Key="MyDrawable" />
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:RealTimeDataStyles />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="Start"/>
            <MenuFlyoutItem Text="Stop"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <!--Using Grid for layout-->
    <Grid>
        <Grid Style="{StaticResource MainGridStyle}">

            <!-- Menu list on the left (taking full length) -->
            <Frame Style="{StaticResource LeftNetworkNamesFrameStyle}" >
                <ListView x:Name="NetworkListView">
                    <ListView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Network-1</x:String>
                            <x:String>Network-2</x:String>
                            <x:String>Network-3</x:String>
                            <x:String>Network-4</x:String>
                        </x:Array>
                    </ListView.ItemsSource>
                </ListView>
            </Frame>

            <Frame Style="{StaticResource LocationStyle}">
                <!-- Dummy location content -->
                <Label Text="Location: 00000 HÃ¤meenlinna" />
            </Frame>

            <StackLayout Style="{StaticResource StackLayoutStyles}" >
                <ScrollView></ScrollView>
                <Grid Style="{StaticResource SecondaryGridStyle}">
                    
                    <Frame Style="{StaticResource SignalStrengthStyle}">
                        <StackLayout Orientation="Vertical">
                            <Label Text="Signal Strength" />
                            <GraphicsView
                                x:Name="Canvas"
                                HorizontalOptions="Fill"
                                Drawable="{StaticResource MyDrawable}"
                                HeightRequest="100"
                                Grid.Row="1" />
                        </StackLayout>
                    </Frame>


                    <Frame  Style="{StaticResource DateTimeLabelStyle}">
                        <Label x:Name="DateTimeLabel" />
                    </Frame>

                    <Frame  Style="{StaticResource nameLabelStyle}">
                       <!--Keeping the thext property field empty to dynamically populated -->
                        <Label x:Name="NetworkNameLabel" />
                    </Frame>
               
                </Grid>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
