<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scanner_MAUI.Pages.HistoricalData"
             Title=""
             BackgroundColor="#f3f3f3"
             >
    
    <ContentPage.MenuBarItems >
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="Start" Clicked="StartMenuItem_Clicked"/>
            <MenuFlyoutItem Text="Stop" Clicked="StopMenuItem_Clicked"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    
    <!--<VerticalStackLayout>
        <Label 
            Text="Welcome to Historical Data Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->

    <ListView x:Name="NetworkListView" ItemsSource="{Binding NetworkNames}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>