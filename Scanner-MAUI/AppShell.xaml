<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Scanner_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Scanner_MAUI.Pages"
    xmlns:root="clr-namespace:Scanner_MAUI"
    xmlns:local="clr-namespace:Scanner_MAUI.Pages"
    >
    <Shell.Resources>
        <Style x:Key="TabBarStyle" TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor"  Value="#f3f3f3" />
            <Setter Property="Shell.TabBarTitleColor"  Value="Black" />
        </Style>
    </Shell.Resources>
    
    <!--Top Nav-->
    <TabBar Style="{StaticResource TabBarStyle}">
        <ShellContent
                Title="Real-time Data"
                ContentTemplate="{DataTemplate pages:RealTimeData}"
                Route="RealTimeData" />
    
        <ShellContent
                Title="Historical Data"
                ContentTemplate="{DataTemplate pages:HistoricalData}"
                Route="HistoricalData" />

        <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:HistoricalData}"
                Route="HistoricalData"
                />
    </TabBar>

</Shell>
